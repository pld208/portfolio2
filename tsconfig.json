{
  "compilerOptions": {
  "experimentalDecorators": true,
  "jsx": "react",
  "esModuleInterop": true,
  "allowSyntheticDefaultImports": true,
  "baseUrl": ".",
  "outDir": "./client/dist/bundle.ts",
  "module": "commonjs",
  "target": "es5",
  "lib": ["es6", "dom"],
  "sourceMap": true,
  "allowJs": true,
  "skipLibCheck": true,
  "moduleResolution": "node",

},
  "noImplicitAny": true,
  "exclude": [
    "node_modules",
    "jest.config.js",
    "babel.config.js"
  ],
  "target": "esnext",
     "baseUrl": ".",
     "paths": {
       "*": ["src/*"],
       "tests": ["tests/*"],
       "@components/*": ["src/components/*"],
     }
}
